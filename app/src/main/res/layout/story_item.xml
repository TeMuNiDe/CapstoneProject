<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_vertical_margin"
    >
<TextView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:id="@+id/story_title"
    app:layout_constraintTop_toTopOf="parent"
    android:transitionName="@string/app_name"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    tools:text="When the Silicon is no more"
    android:textAppearance="?android:textAppearanceLarge"


    />
 <TextView
     android:layout_width="0dp"
     android:layout_height="wrap_content"
     android:id="@+id/story_author"
     app:layout_constraintTop_toBottomOf="@+id/story_title"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintEnd_toStartOf="@+id/story_date"
     tools:text="Vihaari"
     android:textAppearance="?android:textAppearanceMedium"

     />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/story_date"
        app:layout_constraintTop_toBottomOf="@+id/story_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/story_author"
        android:gravity="end"
        tools:text="11/02/1997"
        android:textAppearance="?android:textAppearanceMedium"

        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@+id/story_author"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/story_topics"
        tools:text="android,java,oracle,.net"
        android:textAppearance="?android:textAppearanceMedium"

        />
</android.support.constraint.ConstraintLayout>
    </FrameLayout>